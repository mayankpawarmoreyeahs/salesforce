<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item><shape>
            <gradient android:angle="45"
                android:endColor="#E1E1E1"
                android:startColor="#E1E1E1"
                android:type="linear" />

            <stroke
                android:width="1dp"
                android:color="#8E8E8E"/>

            <corners android:radius="8dp" />


            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

        </shape></item>
        <item ><bitmap android:gravity="bottom|right" android:src="@drawable/spinner_arrow" />
        </item>
    </layer-list></item>

</selector>